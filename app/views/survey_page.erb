<div class="take-survey">
<div class="well">
  <h1><%= @survey.title %></h1>
</div>
  <form action="/survey_page/<%= @survey.id %>" method="POST">
    <% @questions.each do |question| %>
    <div class="well">
      <h2><%= question.description %></h2>
    <% question.choices.each do |choice| %>
      <input type="radio" id="choice" name="current_choices[<%=question.id %>]" value="<%=choice.id%>"> 
      <span><%= choice.text%></span>
      <br>
    <% end %> 
    </div>
    <% end %>



    <input class='btn big' type="submit" value="Submit Survey">
  </form>


</div>