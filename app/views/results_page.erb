<script type="text/javascript">
   $.get(window.location, function(questions){
      for(i=0; i<questions.length;i++){
        var question = questions[i]
        var div = "<div class='well' id='" + question.id.toString() + "' style='width: 600px; height: 300px;' ></div>"
        $("#charts").append(div);
      }
      console.log(questions)
      drawChart(questions);
      $("#charts").hide();
      $("#charts").slideDown('slow');
    });

   setTimeout('$("#charts").slideDown()', 2000)
</script>

<div class="col-66" id="charts">
</div>

<div class="col-33">
  <div class="well survey-info">
    <ul>
      <li>
        <h2><%= @survey.title %></h2>
        <p><%= @survey.description %></p>
      </li>
      <li>
        <p>Taken by <%= @survey.takers.count %> users.</p>
      </li>
    </ul>
  </div>
</div>

