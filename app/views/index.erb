<% if authenticated? %>

<div class="col-66">
  <h1>Welcome <%= current_user.name %></h1>
  <a href="/edit_profile">Edit User Profile</a>
  <br>
  <h3>My Surveys</h3>
  <% current_user.created_surveys.each do |survey| %>
    <a href=""><%= survey.description %></a><br><br>
  <%end%>
  </div>

  <div class="col-33">

    <% if current_user.gravatar %>
      <img src=<%= current_user.gravatar %> alt="">
    <% end %>
    <ul>
      <% current_user.attributes.each do |attr,value| %>
        <% if value %>
          <li>
            <%= "#{attr.humanize}: #{value}" %>
          </li>
        <% end %>
      <% end %>
    </ul>   
  </div>
<% else %>

<div class="col-66">
  <div class="welcome">
    <h1>Welcome to VelaSURaptor</h1>
    <p>Pickled lo-fi ethical squid. Brunch XOXO Williamsburg, DIY meh occupy sriracha polaroid drinking vinegar Cosby sweater shabby chic. Selfies fanny pack flannel selvage, cornhole gastropub seitan asymmetrical XOXO Carles Austin post-ironic beard mustache biodiesel.</p>
  </div>
   <div class="well">
    <div class="buttons">
       <form action="/login">
         <input class="btn" type="submit" value="Log In">
       </form>
       <p>OR</p>
       <form action="/login">
         <input class="btn" type="submit" value="Sign Up">
       </form>
    </div>
     <p class="signup-text">to create and take surveys</p>
   </div>
</div>
<div class="col-33">
  <div class="sidebar">
    <img class="sidebar-raptor" src="velociraptor_2.png" >
  </div>
</div>

<% end %>
